#!/usr/bin/env python

from __future__ import unicode_literals, print_function
import argparse

from veles.scli import client
from veles.schema.nodeid import NodeID

parser = argparse.ArgumentParser()
parser.add_argument('server', help='server address')
parser.add_argument('auth_key', help='hex-encoded server auth-key')
parser.add_argument('file', help='path to file to upload')
args = parser.parse_args()

client = client.create_client(args.server, args.auth_key)

with open(args.file, 'rb') as f:
    data = f.read()

id = client.create(NodeID.root_id,
    tags={'blob', 'blob.file', 'blob.stored',},
    attr={
        'name': args.file,
        'path': args.file,
        'width': 8,
        'base': 0,
        'size': len(data),
    },
    bindata={
        'data': data,
    }
)
print('CREATED BLOB', id)
h_id = client.create(id,
    pos=(0, None),
    tags={'chunk', 'chunk.stored', 'elf.ehdr',},
    attr={'name': 'elf.ehdr',},
)
print('CREATED HEADER', h_id)
